{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest":true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },  
  "rules": {
    "indent": 2,
    "no-unused-vars": 2,
    "no-console": "off",
    "no-alert": 2,
    "import/no-dynamic-require": "off",
    "quotes": [1, "single"],
    "semi": [2, "always", {"omitLastInOneLineBlock": true}]
  } 
}
